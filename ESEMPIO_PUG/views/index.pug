doctype html
html
 head
   title #{title}
   link(rel='stylesheet', href='/css/style.css')
   meta(name="viewport" content="width=device-width, initial-scale=1")
 body
   header.header
         h1 #{title}
   article.container
     each object in lego
       div.object
         img(src = `/img/${object.imgSrc}`)
         h2.object-name
           | #{object.firstname} #{object.lastname}
         a(href=`/profile?id=${object.id}`)
           | View Profile